<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostStoreComment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >

        <ImageView
            android:id="@+id/iv_menubar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_back"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="30dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/board_card"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="요즘 정말 다들 힘든시기 인것 같아요 ㅠㅠ 저는 그 중에서도 대구 의료진 분들의 사진을 보며 더 위로를 받기도 하고 빨리 코로나가 잠잠해졌으면 하는 바램입니다.당신이 우리의 영웅입니다 !"
            android:maxLines="6"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:scrollHorizontally="true"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginBottom="50dp"
            android:text="#대구 #코로나 #의료진 #영웅"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#504C4C"/>

    </LinearLayout>

</LinearLayout>